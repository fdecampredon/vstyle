{
    "compilerOptions": {
        "target": "es5",
        "outDir": "lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": true,
        "noImplicitReturns": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "examples",
        "tests"
    ]
}
